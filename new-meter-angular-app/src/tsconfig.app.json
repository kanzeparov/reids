{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./app",
    "paths": {
      "@app/*": ["./*"],
      "@core/*": ["core/*"],
      "@features/*": ["features/*"],
      "@modules/*": ["modules/*"],
      "@shared/*": ["shared/*"],
      "@utils/*": ["utils/*"],

      "@env": ["../environments/environment.ts"]
    },
    "outDir": "../out-tsc/app",
    "types": ["node"]
  },
  "exclude": [
    "test.ts",
    "**/*.spec.ts"
  ]
}
