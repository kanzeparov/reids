{
  "name": "@onder/common",
  "version": "0.0.1",
  "description": "Common classes for ONDER nodes",
  "repository": "https://github.com/onderPlatform/onder",
  "license": "AGPL-3.0",
  "scripts": {
    "build": "yarn generate && tsc -p tsconfig.json && copyfiles -u 1 src/**/*.{csv,yml} lib/",
    "generate": "yarn generate_error_factory && yarn generate_error_serializer && yarn generate_meterconfiguation_utils && yarn generate_operator",
    "generate_error_factory": "xsltproc -o src/error_factory.ts resources/error_factory.xsl ../interfaces/resources/errors.xml",
    "generate_error_serializer": "xsltproc -o src/error_serializer.ts resources/error_serializer.xsl ../interfaces/resources/errors.xml",
    "generate_meterconfiguation_utils": "xsltproc -o src/meterconfiguation_utils.ts resources/meterconfiguation_utils.xsl ../interfaces/resources/meters.xml",
    "generate_operator": "yarn generate_operator_client && yarn generate_operator_server",
    "generate_operator_client": "xsltproc -o src/operator/OperatorTransportClient.ts resources/operator_transport_client.xsl ../interfaces/resources/operator.xml",
    "generate_operator_server": "xsltproc -o src/operator/OperatorTransportServer.ts resources/operator_transport_server.xsl ../interfaces/resources/operator.xml",
    "watch-ts": "yarn lint && tsc -w -p tsconfig.json",
    "lint": "tslint -t stylish -p '.' -e './node_modules/**/*.ts'"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "dependencies": {
    "@machinomy/logger": "^0.2.3",
    "@onder/interfaces": "^0.0.1",
    "await-semaphore": "^0.1.3",
    "bignumber.js": "^4.1.0",
    "bonjour": "^3.5.0",
    "csv-parser": "^1.12.1",
    "errorhandler": "^1.5.0",
    "express-validator": "^5.3.0",
    "gpio": "https://github.com/ukstv/GpiO",
    "js-yaml": "^3.12.0",
    "lodash": "^4.17.11",
    "machinomy": "^1.13.32",
    "mqtt": "^3.0.0",
    "safe-buffer": "^5.1.2",
    "serialport": "^6.2.1",
    "socket.io-client": "^2.1.1",
    "web3": "^0.20.x"
  },
  "devDependencies": {
    "copyfiles": "^2.0.0",
    "@onder/interfaces": "^0.0.1",
    "@types/js-yaml": "^3.11.2",
    "@types/lodash": "^4.14.117",
    "@types/serialport": "^6.0.4",
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "mocha": "^5.2.0"
  }
}
